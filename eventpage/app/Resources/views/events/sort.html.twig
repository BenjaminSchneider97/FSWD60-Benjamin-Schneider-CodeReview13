{% extends 'base.html.twig' %}

{% block title %}Sort{% endblock %}

{% block body %}
	<div class="pageheader">
			<h1>Sort by "<b>{{events[0].eventType}}</b>"</h1>
		<hr>
	</div>
	<div class="row">
		{% if events >= 1 %}
			{% for event in events %}
				<div class="card col-lg-3 col-md-5 col-sm-12">
					<div class="cardImage">
						<a href="/details/{{event.id}}"><img src="{{event.eventImage}}"></a>
					</div>
					<div class="cardName">
						<a href="/details/{{event.id}}"><h3>{{event.eventName}}</h3></a>
					</div>
					<div class="cardDescription">
						<p><i class="fas fa-map-marker-alt fasdesc"></i>{{event.eventAddress}}</p>
						<p><i class="far fa-clock"></i>{{event.eventStartDate|date('d F Y, G:i')}}</p>
						<p><i class="far fa-clock"></i>{{event.eventEndDate|date('d F Y, G:i')}}</p>
						<p><i class="fas fa-globe-europe fasdesc"></i><a target="_blank" href="{{event.eventWebAddress}}">{{event.eventWebAddress}}</a></p>
					</div>
					<div class="editbuttons">
						<a href="/details/{{event.id}}" class="btn btn-success">View</a>     
						<a href="/edit/{{event.id}}" class="btn btn-info">Edit</a>
						<a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>
					</div>
				</div>
			{% endfor %}
		{% else %}
			<div class="col-sm-12 text-center">
				<h5>Sorry, no posts found!</h5>
				<br>
				<a class="btn btn-info" href="/">Back to all Events</a>
			</div>
		{% endif %}
	</div>
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="../css/style.css">
{% endblock %}